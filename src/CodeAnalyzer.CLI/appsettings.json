{
    "AzureOpenAI": {
        "ModelId": "gpt-4.1-mini",
        "EmbedDeploymentModelId": "text-embedding-3-small",
        "Endpoint": "<End point>",
        "Apikey": "<API Key>"
    },
    "ReadOptions": {
        "IncludeSubDirectories": true,
        "FileExtensions": [ ".cs", ".js", ".ts", ".py", ".java", ".cpp", ".csproj", ".sln", ".md", ".sql", ".txt" ],
        "ExcludePaths": [ "bin", "obj", ".git" ]
    },
    "VectorStore": {
        "ConnectionString": "Data Source=codebase.db",
        "CollectionName": "CodebaseCollection"
    },
    "ChatHistoryReducer": {
        "TargetCount": 2,
        "ThresholdCount": 4
    },
    "Logging": {
        "Enabled": false,
        "LogLevel": {
            "Default": "Information"
        }
    }
}